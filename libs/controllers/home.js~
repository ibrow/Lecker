/**
 * Home Page
 **/
// controller inherits from the base
var controller = require('../controllers/_base.js');
var artist = Object.create(controller);


/**
 * The landing page, this simply needs to direct to /artists/
 **/
artist.landing =  function(req, res) {
    res.redirect('/artists/', 301);
};

/**
 * Display the artist detail page
 **/
artist.detail = function(req, res) {
    res.render('artists/detail', {
	title: 'Artist Detail ' + req.params.show_id,
	region: 'Another example variable'
    })
}


module.exports = artist;